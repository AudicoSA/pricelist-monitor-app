# Environment Variables for AI Pricelist Monitor
# Copy this to .env.local for local development

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-key-here-change-this
NEXTAUTH_URL=http://localhost:3000

# Supabase Configuration  
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Admin Password for OpenCart Integration
ADMIN_PASSWORD=your-secure-admin-password

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=xlsx,xls,pdf

# Optional: OpenCart Database Connection (if using direct integration)
OPENCART_DB_HOST=your-opencart-db-host
OPENCART_DB_USER=your-opencart-db-user
OPENCART_DB_PASS=your-opencart-db-password
OPENCART_DB_NAME=your-opencart-db-name
